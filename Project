#New project_python
#game: Fighting multiplayer
#мультиплеер. Будет возможность перехода по уровням
#Возможность взаимодействия с выпадающими предметами (оружие)
#Различные умения/характеристики персонажа
#В идеале наличие искусственного интеллекта

import pygame
from pygame import*

class Player:
    def __init__(self, number,x = 100, y = 100, vy = 0, a = 500, r = 20, color = (0,0,0)):
        """Constructor of Player class"""
        """self.a - acceleration"""
        """self.r - radius"""
        self.number, self.x, self.y, self.vy, self.a, self.r, self.color = \
                number, x, y, vy, a, r, color
        self.im = pygame.image.load("man.bmp").convert()

    def update(self, game):
        """Update Player state"""
        if self.number == 1:
            if game.pressed[pygame.K_LEFT]:
                self.x -= 10
            if game.pressed[pygame.K_RIGHT]:
                self.x += 10
            if game.pressed[pygame.K_UP]:
                if self.y == game.height - 40:
                    self.vy -= 800
                    
        elif self.number == 2:
            if game.pressed[pygame.K_a]:
                self.x -= 10
            if game.pressed[pygame.K_d]:
                self.x += 10
            if game.pressed[pygame.K_w]:
                if self.y == game.height - 40:
                    self.vy -= 800

        self.vy += game.delta * 1500 
        self.y += self.vy * game.delta

        """Do not let Player get out of the Game window"""
        if self.x < self.r:
            self.x = self.r
        if self.y < self.r:
            self.y = self.r
        if self.x > game.width - self.r:
            self.x = game.width - self.r
        if self.y >= game.height - 40:
            self.y = game.height - 40
            self.vy = 0

    def render(self, game):
        """Draw Player on the Game window"""
        game.screen.blit(self.im, (int(self.x),int(self.y)))

class Game:
    def tick(self):
        """Return time in seconds since previous call
        and limit speed of the game to 60 fps"""
        self.delta = self.clock.tick(60) / 1000.0

    def __init__(self):
        """Constructor of the Game"""
        self._running = True
        self.size = self.width, self.height = 1040, 400
        # create main display - 1040x400 window
        # try to use hardware acceleration
        self.screen = pygame.display.set_mode(self.size, pygame.HWSURFACE)
        # set window caption
        pygame.display.set_caption('Game')
        # get object to help track time
        self.clock = pygame.time.Clock()
        # set default tool
        self.tool = 'run'
        self.player2 = Player(2, x = 600, color=(255,0,0))
        self.player = Player(1)
        

    def event_handler(self, event):
        """Handling one pygame event"""
        if event.type == pygame.QUIT:
            # close window event
            self.exit()
        elif event.type == pygame.KEYDOWN:
            # keyboard event on press ESC
            if event.key == pygame.K_ESCAPE:
                self.exit()

    def move(self):
        """Here game objects update their positions"""
        self.tick()
        self.pressed = pygame.key.get_pressed()
        self.player.update(self)
        self.player2.update(self)

    def render(self):
        """Render the scene"""
        self.screen.fill((255, 255, 255))
        self.player.render(self)
        self.player2.render(self)
        pygame.display.flip()

    def exit(self):
        """Exit the game"""
        self._running = False

    def execute(self):
        """Execution loop of the game"""
        while(self._running):
            # get all pygame events from queue
            for event in pygame.event.get():
                self.event_handler(event)
            self.move()
            self.render()
        pygame.quit()

if __name__ == "__main__":
    game = Game()
    game.execute()
